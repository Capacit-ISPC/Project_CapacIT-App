<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20sp"
    android:orientation="vertical">

    <include
        android:id="@+id/customToolbar"
        layout="@layout/backward_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/toolbar_navegacion_atras"
        />
    <TextView
        android:id="@+id/tv_tbPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="Contacto"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/customToolbar"
        app:layout_constraintEnd_toEndOf="@+id/customToolbar"
        app:layout_constraintStart_toStartOf="@+id/customToolbar"
        app:layout_constraintTop_toTopOf="@+id/customToolbar"
        android:contentDescription="@string/text_titulo_contacto"
        />


    <TextView
        android:id="@+id/textViewAyuda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:gravity="center"
        android:text="@string/text_ayuda"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customToolbar"
        android:contentDescription="@string/text_ayudarte"
        />

    <TextView
        android:id="@+id/textViewContactarnos"
        android:layout_width="209dp"
        android:layout_height="120dp"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:text="@string/text_contactarnos"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAyuda"
        android:contentDescription="@string/text_contactarnos_email"

        />

    <TextView
        android:id="@+id/textViewemailContacto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/text_emailcontacto"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewContactarnos"
        android:contentDescription="@string/text_email_contacto"
        />

    <ImageView
        android:id="@+id/imageViewLogoContacto"
        android:layout_width="match_parent"
        android:layout_height="154dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewemailContacto"
        app:layout_constraintVertical_bias="0.215"
        app:srcCompat="@drawable/iconoweb"
        tools:ignore="ExtraText"
        android:contentDescription="@string/logo_de_la_aplicacion"
        />

    <TextView
        android:id="@+id/tv_visitaWeb"
        android:layout_width="224dp"
        android:layout_height="68dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="@string/text_visitaWeb"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogoContacto"
        android:contentDescription="@string/text_desc_visita_web"
        />

</androidx.constraintlayout.widget.ConstraintLayout>